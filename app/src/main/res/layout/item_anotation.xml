<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:backgroundTint="@color/blue10"
            android:padding="10dp"
            android:persistentDrawingCache=""
            android:background="@drawable/shape"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/notesContent"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="Exemplo ajkhsk akjhsda kajhsda kajhsd jkfsdh skjhdf skjhdf kjshdf kjshbndf ksjhdf kjdsh me qias oijehs jhgyfdrsa"
                android:textColor="@color/black"
                android:lines="5"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="23 March 2021"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </LinearLayout>

</LinearLayout>