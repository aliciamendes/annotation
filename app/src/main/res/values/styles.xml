<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:height">50dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingStart">@dimen/padding_start_small</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_bottom_big</item>
        <item name="android:contentDescription">@string/to_start_say_your_name</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>


</resources>